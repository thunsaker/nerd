<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wizard_page_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/wizard_follow_info" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:maxWidth="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/nerd_dm"/>

        <TextView
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/wizard_follow_follow" />

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:scaleType="centerInside"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:tint="@color/white_transparent"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:src="@drawable/twitter_envelope"/>-->
    </LinearLayout>
</ScrollView>